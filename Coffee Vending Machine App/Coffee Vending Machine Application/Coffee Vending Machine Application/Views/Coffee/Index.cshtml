@model List<CoffeeVendingMachine.Domain.Models.Coffee>;

@{
    ViewData["Title"] = "Home Page";
}

@* --------------------- First DIV ----------------------- *@
<div class="first-div">
    <div class="row heading">
        <img class="display-4; col-sm" src="~/img/DIV.jpg" style="height:1175px"></img>
        <h1 id="heading1" class="text-white">Welcome to the coffee shop</h1>
        <h5 id="heading5" class="text-white">The place where coffee blends with your lifestyle.</h5>
    </div>



    @*---------------------------------------- Cards ----------------------------------*@
    <div>
        <div class="card-deck mt-3">
            <div class="card">
                <img src="~/img/macchiato_01.jpg" class="card-img-top" alt="latte-macchiato">
                <div class="card-body">
                    <h5 class="card-title text-lg-center">@Model[1].Name</h5>
                    <p class="card-text" style="text-align:justify">The macchiato is an espresso coffee drink, topped with a small amount of foamed or steamed milk to allow the taste of the espresso to still shine through.</p>
                    <a href="https://www.nescafe.com/gb/coffee-types/what-is-a-macchiato/" style="color:slategray; font-size: 13px">Learn More</a>
                </div>
            </div>
            <div class="card">
                <img src="~/img/latte_01.jpg" class="card-img-top" alt="latte">
                <div class="card-body">
                    <h5 class="card-title text-lg-center">@Model[0].Name</h5>
                    <p class="card-text" style="text-align:justify">The Café au Lait is made using brewed coffee and steamed milk, in a typical ratio of one part coffee to one part steamed milk with no froth or foam on top.</p>
                    <a href="https://www.nescafe.com/gb/coffee-types/what-is-a-latte/" style="color:slategray; font-size: 13px">Learn More</a>
                </div>
            </div>
            <div class="card">
                <img src="~/img/espresso_01.jpg" class="card-img-top" alt="espresso">
                <div class="card-body">
                    <h5 class="card-title text-lg-center">@Model[2].Name</h5>
                    <p class="card-text" style="text-align:justify">Espresso is a delicious concentrated form of coffee, served in shots and it’s often the coffee base of many other beverages, such as cappuccino, latte, americano and macchiato.</p>
                    <a href="https://www.nescafe.com/gb/coffee-types/what-is-an-espresso/" style="color:slategray; font-size: 13px">Learn More</a>
                </div>
            </div>
            <div class="card">
                <img src="~/img/americano_01.jpg" class="card-img-top" alt="americano">
                <div class="card-body">
                    <h5 class="card-title text-lg-center">@Model[3].Name</h5>
                    <p class="card-text" style="text-align:justify">An americano is just hot water and espresso. It’ll be served 1/2 and 1/2 or 1/3 espresso to 2/3 water, depending on how you’ve chosen to brew it. </p>
                    <a href="https://www.nescafe.com/gb/coffee-types/what-is-an-americano/" style="color:slategray; font-size: 13px">Learn More</a>
                </div>
            </div>
            <div class="card">
                <img src="~/img/irish_01.jpg" class="card-img-top" alt="irish">
                <div class="card-body">
                    <h5 class="card-title text-lg-center">@Model[4].Name</h5>
                    <p class="card-text" style="text-align:justify">Irish coffee has four main ingredients: coffee, Irish whiskey, sugar and cream. When making an Irish coffee, we make sure that the coffee is strong and the whiskey is Irish!</p>
                    <a href="https://www.nescafe.com/gb/coffee-types/what-is-an-irish-coffee/" style="color:slategray; font-size: 13px">Learn More</a>
                </div>
            </div>
        </div>
    </div>



    <div class="order_button">
        <a asp-controller="Coffee" asp-action="Order" class="btn btn-secondary btn-lg">Order Coffee</a>
    </div>

</div>





